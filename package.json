{
  "name": "feather",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/LuisAriasC/feather"
  },
  "bugs": {
    "url": "https://github.com/LuisAriasC/feather/issues"
  },
  "author": "Luis Carlos Arias",
  "scripts": {
    "clean": "yarn lerna clean --yes && rm -rf ./node_modules && yarn cache clean",
    "regenerate": "yarn clean && yarn install --workspace-lockfile",
    "cz": "git-cz",
    "g:tsc": "cd $INIT_CWD && tsc",
    "g:eslint": "cd $INIT_CWD && eslint",
    "g:jest": "cd $INIT_CWD && jest",
    "lint": "yarn lerna run lint",
    "lint:fix": "yarn lerna run lint:fix",
    "test": "yarn lerna run test",
    "test:cov": "yarn lerna run test:cov",
    "build": "yarn lerna run build"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "12.0.1",
    "@secretlint/secretlint-rule-preset-recommend": "2.1.1",
    "@types/dotenv": "8.2.0",
    "@types/jest": "26.0.23",
    "@types/node": "14.14.31",
    "@types/prettier": "2.2.1",
    "@types/rimraf": "3.0.0",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "commitizen": "4.2.3",
    "commitlint": "12.0.1",
    "cz-lerna-changelog": "2.0.3",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.0",
    "secretlint": "2.1.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.2",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.6",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "precommit": "NODE_ENV=production lint-staged",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn run lint:fix",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "husky": "4"
  }
}

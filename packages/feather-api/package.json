{
  "name": "feather-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ../../node_modules/typeorm/cli.js --config ./src/modules/database/ormconfig.ts",
    "typeorm:migrate": "yarn run typeorm migration:generate -- -n",
    "typeorm:run": "yarn run typeorm migration:run",
    "docker:build": "docker build -t feather-api . && docker run -d -p 8080:8080 --name feather_api -it feather-api"
  },
  "dependencies": {
    "@casl/ability": "5.2.2",
    "@hapi/joi": "17.1.1",
    "@nestjs-query/core": "0.24.0",
    "@nestjs-query/query-graphql": "0.24.0",
    "@nestjs-query/query-mongoose": "0.24.0",
    "@nestjs-query/query-typeorm": "0.24.0",
    "@nestjs/common": "7.6.13",
    "@nestjs/config": "0.6.3",
    "@nestjs/core": "7.6.13",
    "@nestjs/graphql": "7.9.9",
    "@nestjs/jwt": "7.2.0",
    "@nestjs/microservices": "7.6.17",
    "@nestjs/mongoose": "7.2.3",
    "@nestjs/passport": "7.1.5",
    "@nestjs/platform-express": "7.6.13",
    "@nestjs/typeorm": "7.1.5",
    "@sendgrid/mail": "7.4.5",
    "apollo-server-express": "2.21.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.5",
    "dataloader": "2.0.0",
    "flagsmith-nodejs": "1.1.0",
    "graphql": "15.5.0",
    "graphql-relay": "0.6.0",
    "graphql-subscriptions": "1.2.0",
    "graphql-type-json": "0.3.2",
    "helmet": "4.4.1",
    "ioredis": "4.24.4",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.0.3",
    "lodash": "4.17.21",
    "nanoid": "3.1.20",
    "nestjs-pino": "2.6.0",
    "nestjs-redis": "1.3.3",
    "passport": "0.4.1",
    "passport-custom": "1.1.1",
    "pg": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "typeorm": "0.2.31"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.5",
    "@nestjs/schematics": "7.2.7",
    "@nestjs/testing": "7.6.13",
    "@types/compression": "1.7.0",
    "@types/express": "4.17.11",
    "@types/jsonwebtoken": "8.5.1",
    "@types/nanoid": "2.1.0",
    "@types/passport": "1.0.6",
    "eslint": "7.22.0",
    "prettier": "2.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
